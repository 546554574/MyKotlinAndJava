<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171D28">
    <ImageView
        android:layout_width="@dimen/dp_287"
        android:layout_height="@dimen/dp_128"
        android:src="@mipmap/logo_login"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/et_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:background="@drawable/bg_login_edit"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="9dp"
        android:textColor="#666666"
        android:textColorHint="#666666"
        android:hint="账号"
        android:textSize="@dimen/text_12"/>
    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:background="@drawable/bg_login_edit"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:paddingLeft="9dp"
        android:textColor="#666666"
        android:textColorHint="#666666"
        android:hint="密码"
        android:textSize="@dimen/text_12"/>
    <LinearLayout
        android:id="@+id/ll_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_12"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/iv_check"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="始终保持登陆状态"
            android:textColor="#ffbbbbbb"
            android:textSize="@dimen/text_10"
            android:layout_marginLeft="@dimen/dp_7"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="登陆"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        android:gravity="center"
        android:background="@drawable/bg_login_button"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_30"/>

    <TextView
        android:id="@+id/tv_findpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textColor="#ffc6a803"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="gone"
        android:layout_gravity="right"/>
</LinearLayout>